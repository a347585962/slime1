<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashStyle"
        parent="@style/Theme.AppCompat.FullScreen" >

        <!--自定义主题背景为我们刚刚创建的颜色-->
        <item name="android:windowBackground" >@color/splashBg</item >

        <!--令主题无标题-->
        <item name="android:windowNoTitle" >true</item >
    </style >

    <style name="ImageSplashStyle"
        parent="@style/Theme.AppCompat.FullScreen" >

        <!--自定义主题背景为我们刚刚创建的颜色-->
        <item name="android:windowBackground" >@mipmap/loading_bg</item >

    </style >
</resources>